<Window x:Class="SWserver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWserver"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox ScrollViewer.HorizontalScrollBarVisibility="Disabled"
         ScrollViewer.VerticalScrollBarVisibility="Auto" x:Name="infoBox" HorizontalAlignment="Left" Height="208" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497"/>
        <Button x:Name="start" Content="Start" HorizontalAlignment="Left" Margin="78,240,0,0" VerticalAlignment="Top" Width="76" Click="startListen_Click"/>
        <Button x:Name="disconnect" Content="Disconnect" HorizontalAlignment="Left" Margin="254,240,0,0" VerticalAlignment="Top" Width="75" Click="disconnect_Click"/>
        <Button x:Name="send" Content="Send" HorizontalAlignment="Left" Margin="167,279,0,0" VerticalAlignment="Top" Width="75" Click="send_Click"/>

    </Grid>
</Window>
